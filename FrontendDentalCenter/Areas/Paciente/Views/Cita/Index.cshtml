    });
    
    CargarListadoCita();
    function CargarListadoCita()
    {
        $.ajax({
            type: "GET",
            url: '@Url.Action("Listado","Cita", new {Area = "Paciente"})',
            cache: false,
            success: function(dataHTML){
                $("#divListadoCita").html(dataHTML);

            }
        });
    }

</script>